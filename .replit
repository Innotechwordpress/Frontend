modules = ["nodejs-20", "web", "python-3.12"]
run = "npm run dev"

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "npm run dev"]

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 46519710
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npm install && npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Backend-Narrisia && poetry install --no-dev"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Backend-Narrisia && poetry run python -m uvicorn main:app --host 0.0.0.0 --port 5000 --reload"
